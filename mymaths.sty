% MATRICES #################################################

% Easier vector creation
\newcommand{\vecxy}[2]{%
	\begin{pmatrix}
		{#1} \\ {#2}
	\end{pmatrix}
}

% Easier vector creation
\newcommand{\vecxyz}[3]{%
	\begin{pmatrix}
		{#1} \\ {#2} \\ {#3}
	\end{pmatrix}
}

% Easier vector creation
\newcommand{\hvecxyz}[3]{%
	\begin{pmatrix}
		{#1} & {#2} & {#3}
	\end{pmatrix}
}

% Inline small matrix
\newcommand{\inmatrix}[1]{%
	\left(\begin{smallmatrix} #1 \end{smallmatrix} \right)
}

% Hat operator skew-symmetric matrix
\newcommand{\hatmat}[3]{%
	\begin{pmatrix}
		  0   & -{#3} &  {#2} \\
		 {#3} &   0   & -{#1} \\
		-{#2} &  {#1} &   0
	\end{pmatrix}
}

% Diagonal matrix where you specify top left and bottom right elements
\newcommand{\diagtwo}[2]{%
	\begin{pmatrix}
		{#1}   & \ldots & 0      \\
		\vdots & \ddots & \vdots \\
		0      & \ldots & {#2}
	\end{pmatrix}
}

